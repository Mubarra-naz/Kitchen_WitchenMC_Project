<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:background="@drawable/gradient"
    android:layout_height="wrap_content"
    android:padding="8dp"
    tools:ignore="MissingConstraints">

    <androidx.cardview.widget.CardView
        android:id="@+id/cart_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="17dp"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/dish_image"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.058"
                tools:ignore="MissingConstraints"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/dish_name"
                android:layout_height="wrap_content"
                android:text="Food Item Name"
                android:textColor="#0B0B0B"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/dish_image"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="wrap_content" />

            <TextView
                android:id="@+id/dish_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food Quantity"
                android:textColor="#0B0B0B"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/dish_name"
                app:layout_constraintStart_toStartOf="@id/dish_name" />

            <TextView
                android:id="@+id/dish_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Food Price"
                android:textColor="#0B0B0B"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/dish_image" />

            
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/total_bill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grand Total :"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="23sp"
        app:layout_constraintTop_toBottomOf="@id/cart_layout"
        app:layout_constraintBottom_toBottomOf="@id/main_layout"
        app:layout_constraintStart_toStartOf="@id/cart_layout"
        app:layout_constraintEnd_toEndOf="parent"/>
    
    


</androidx.constraintlayout.widget.ConstraintLayout>
