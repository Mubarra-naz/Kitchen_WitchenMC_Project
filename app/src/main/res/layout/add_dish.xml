<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <EditText
        android:id="@+id/add_dish_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Add dish name"
        app:layout_constraintTop_toTopOf="parent"/>
    <EditText
        android:id="@+id/add_dish_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="paste image url"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/add_dish_name"/>
    <EditText
        android:id="@+id/add_dish_ingr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add dish ingredients"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/add_dish_image"/>
    <EditText
        android:id="@+id/add_dish_cat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="add dish category"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/add_dish_ingr"/>
    <EditText
        android:id="@+id/add_dish_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Add dish price"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@id/add_dish_cat"/>
</androidx.constraintlayout.widget.ConstraintLayout>